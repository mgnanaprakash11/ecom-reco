{
  "name": "@repo/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./schema": "./src/schema/index.ts"
  },
  "scripts": {
    "generate": "drizzle-kit generate --config=drizzle.config.ts",
    "push": "node ./scripts/migrate.mjs",
    "migrate": "node ./scripts/migrate.mjs",
    "drizzle:push": "drizzle-kit push --config=drizzle.config.ts",
    "studio": "drizzle-kit studio --config=drizzle.config.ts",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "drizzle-orm": "latest",
    "pg": "^8.12.0",
    "postgres": "^3.4.4"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.15.3",
    "@types/pg": "^8.11.6",
    "drizzle-kit": "latest",
    "typescript": "5.9.2"
  }
}
