{
  "name": "ecom-reco",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "dev:triggers": "pnpm dlx trigger.dev@latest dev",
    "db:generate": "pnpm --filter @repo/db run generate",
    "db:push": "pnpm --filter @repo/db run push",
    "db:studio": "pnpm --filter @repo/db run studio"
  },
  "devDependencies": {
    "@trigger.dev/sdk": "^4.0.2",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
